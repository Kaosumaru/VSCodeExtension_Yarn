{
    "name": "yarn-spinner",
    "displayName": "Yarn Spinner",
    "description": "Adds support for the Yarn Spinner dialogue language.",
    "version": "2.0.0-beta1",
    "homepage": "https://yarnspinner.dev",
    "repository": "https://github.com/YarnSpinnerTool/VSCodeExtension",
    "license": "MIT",
    "keywords": [
        "yarn spinner",
        "yarnspinner",
        "yarn",
        "game writing",
        "narrative",
        "tree",
        "branch",
        "branching",
        "dialog",
        "dialogue"
    ],
    "activationEvents": [
        "onLanguage:yarnspinner",
        "onCustomEditor:yarnspinner.yarnNodes"
    ],
    "main": "./out/extension.js",
    "qna": false,
    "publisher": "SecretLab",
    "icon": "icon.png",
    "galleryBanner": {
        "color": "#C5E29B",
        "theme": "light"
    },
    "engines": {
        "vscode": "^1.60.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./tsconfig.json",
        "lint": "eslint . --ext .ts,.tsx",
        "watch": "tsc -watch -p tsconfig.json",
        "test": "tsc -p tsconfig.json; jest",
        "package": "vsce package",
        "antlr4ts": "antlr4ts src/YarnSpinnerLexer.g4 ; antlr4ts -visitor src/YarnSpinnerParser.g4"
    },
    "devDependencies": {
        "@types/jest": "^27.0.1",
        "@types/node": "^12.12.0",
        "@types/vscode": "^1.60.0",
        "@typescript-eslint/eslint-plugin": "^4.16.0",
        "@typescript-eslint/parser": "^4.16.0",
        "antlr4ts-cli": "^0.5.0-alpha.4",
        "eslint": "^7.21.0",
        "jest": "^27.1.1",
        "jest-each": "^27.1.1",
        "ts-jest": "^27.0.5",
        "typescript": "^4.2.2",
        "vsce": "^2.5.3"
    },
    "contributes": {
        "menus": {
            "editor/title": [
                {
                    "command": "yarnspinner.show-graph",
                    "group": "navigation",
                    "when": "editorLangId == yarnspinner"
                }
            ]
        },
        "customEditors": [
            {
                "viewType": "yarnspinner.yarnNodes",
                "displayName": "Yarn Spinner",
                "selector": [
                    {
                        "filenamePattern": "*.{yarn,yarnproject,yarn.txt}"
                    }
                ],
                "priority": "option"
            }
        ],
        "commands": [
            {
                "command": "yarnspinner.show-graph",
                "title": "Show Graph"
            }
        ],
        "languages": [
            {
                "id": "yarnspinner",
                "aliases": [
                    "Yarn Spinner",
                    "yarnspinner",
                    "Yarn"
                ],
                "extensions": [
                    ".yarn",
                    ".yarn.txt",
                    ".yarnprogram"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "yarnspinner",
                "scopeName": "source.yarnspinner",
                "path": "./syntaxes/yarnspinner.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "yarnspinner",
                "path": "./snippets.json"
            }
        ]
    },
    "dependencies": {
        "@vscode/codicons": "^0.0.22",
        "@vscode/webview-ui-toolkit": "^0.8.4",
        "antlr4ts": "^0.5.0-alpha.4",
        "interactjs": "^1.10.11",
        "leader-line": "^1.0.5"
    }
}
